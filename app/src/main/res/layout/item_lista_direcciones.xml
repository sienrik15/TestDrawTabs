<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/texto_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="0dp"
        tools:layout_conversion_absoluteWidth="59dp"
        tools:layout_conversion_absoluteHeight="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/texto_departamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departamento"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="16dp"
        tools:layout_conversion_absoluteWidth="88dp"
        tools:layout_conversion_absoluteHeight="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/icono_indicador_derecho"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.167"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/texto_direccion" />

    <TextView
        android:id="@+id/texto_ciudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciudad"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="33dp"
        tools:layout_conversion_absoluteWidth="43dp"
        tools:layout_conversion_absoluteHeight="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/texto_departamento" />

    <TextView
        android:id="@+id/texto_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teléfono"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="49dp"
        tools:layout_conversion_absoluteWidth="55dp"
        tools:layout_conversion_absoluteHeight="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/texto_ciudad" />


    <ImageView
        android:id="@+id/icono_indicador_derecho"
        android:layout_width="44dp"
        android:layout_height="39dp"
        android:src="@drawable/ic_menu_send"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="37dp"
        app:layout_constraintVertical_bias="0.506" />
</android.support.constraint.ConstraintLayout>